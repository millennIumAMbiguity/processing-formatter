{
	"name": "processing-formatter",
	"displayName": "processing-formatter",
	"description": "a processing formatter",
	"version": "0.3.8",
	"author": "millennIumAMbiguity",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/millennIumAMbiguity/processing-formatter"
	},
	"bugs": {
		"url": "https://github.com/millennIumAMbiguity/processing-formatter/issues"
	},
	"publisher": "millennIumAMbiguity",
	"engines": {
		"vscode": "^1.49.0"
	},
	"categories": [
		"Formatters"
	],
	"keywords": [
		"pde",
		"Processing"
	  ],
	"activationEvents": [
		"onLanguage:pde"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "pde",
				"aliases": [
					"Processing",
					"processing",
					"pde"
				],
				"extensions": [
					".pde"
				]
			}
		],
		"configuration": {
			"title": "Processing Formatter",
			"properties": {
			  "processing-formatter.format.useSpaceAfterIfAndFor": {
				"type": "boolean",
				"default": true,
				"description": "When true: if() -> if () else the opposite"
			  }
			}
		}
	},
	
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.49.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.11.7",
		"eslint": "^7.9.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	}
}
